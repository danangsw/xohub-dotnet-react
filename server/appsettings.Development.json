{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug"
    }
  },
  "JWT": {
    "Issuer": "TicTacToeServer",
    "Audience": "TicTacToeClient",
    "TokenLifetimeHours": 1,
    "KeyRotationHours": 1,
    "KeyOverlapHours": 2,
    "ClockSkewSeconds": 300,
    "KeyStoragePath": "/app/keys"
  },
  "RoomPruner": {
    "CleanupIntervalMinutes": 0.1,
    "KeyRotationHours": 0.001,
    "InactivityThresholdMinutes": 30
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]
  },
  "Security": {
    "MaxFailedLoginAttempts": 10,
    "AccountLockoutMinutes": 5,
    "FailedLoginTrackingHours": 24,
    "RateLimiting": {
      "AuthRequestsPerWindow": 50,
      "AuthWindowMinutes": 15,
      "JwksRequestsPerWindow": 500,
      "JwksWindowMinutes": 60
    }
  }
}
